{
  "id": "com.neatorobotics",
  "version": "1.0.4",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "Neato BotVac"
  },
  "description": {
    "en": "Homey app that adds support for the Neato BotVac series",
    "nl": "Homey app die support voor de Neato BotVac serie toevoegd"
  },
  "category": [
    "appliances"
  ],
  "tags": {
    "en": ["vacuumcleaner", "vacuum", "robot", "robotics", "neato"],
    "nl": ["stofzuiger", "robot", "robots", "neato"]
  },
  "images": {
    "small": "/assets/images/small.jpg",
    "large": "/assets/images/large.jpg"
  },
  "permissions": [],
  "author": {
    "name": "Athom B.V.",
    "email": "info@athom.nl"
  },
  "drivers": [
    {
      "id": "botvac",
      "name": {
        "en": "BotVac connected"
      },
      "images": {
        "small": "/drivers/botvac/assets/images/small.jpg",
        "large": "/drivers/botvac/assets/images/large.jpg"
      },
      "class": "vacuumcleaner",
      "capabilities": ["measure_battery", "vacuumcleaner_state"],
      "pair": [
        {
          "id": "login_credentials",
          "template": "login_credentials",
          "options": {
            "logo": "icon.svg",
            "usernameLabel": { "en": "E-mail address" },
            "usernamePlaceholder": { "en": "john@doe.com" },
            "passwordLabel": { "en": "Password" },
            "passwordPlaceholder": { "en": "Password" }
          }
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "id": "poll_interval",
          "type": "number",
          "label": {
            "nl": "Polling interval voor de apparaatstatus",
            "en": "Interval for polling the device state"
          },
          "value": 10
        }
      ]
    }
  ]
}
