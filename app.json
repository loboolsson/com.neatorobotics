{
  "id": "com.neatorobotics",
  "version": "1.1.2",
  "compatibility": ">=1.5.0",
  "platforms": [
    "local"
  ],
  "support": "mailto:lobo.olsson@gmail.com",
  "sdk": 2,
  "brandColor": "#ff6021",
  "name": {
    "en": "Neato BotVac"
  },
  "description": {
    "en": "Homey app that adds support for the Neato BotVac series",
    "nl": "Homey app die support voor de Neato BotVac serie toevoegd"
  },
  "category": [
    "appliances"
  ],
  "tags": {
    "en": [
      "vacuumcleaner",
      "vacuum",
      "robot",
      "robotics",
      "neato"
    ],
    "nl": [
      "stofzuiger",
      "robot",
      "robots",
      "neato"
    ]
  },
  "images": {
    "small": "/assets/images/small.jpg",
    "large": "/assets/images/large.jpg"
  },
  "permissions": [],
  "author": {
    "name": "Athom B.V.",
    "email": "info@athom.nl"
  },
  "drivers": [
    {
      "id": "botvac",
      "name": {
        "en": "BotVac connected"
      },
      "images": {
        "small": "/drivers/botvac/assets/images/small.jpg",
        "large": "/drivers/botvac/assets/images/large.jpg"
      },
      "platforms": [
        "local"
      ],
      "connectivity": [
        "lan"
      ],
      "class": "vacuumcleaner",
      "capabilities": [
        "measure_battery",
        "vacuumcleaner_state"
      ],
      "energy": {
        "batteries": [
          "INTERNAL"
        ]
      },
      "pair": [
        {
          "id": "OAuthLogin",
          "template": "login_oauth2",
          "navigation": {
            "next": "list_devices"
          }
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "id": "poll_interval",
          "type": "number",
          "value": 10,
          "label": {
            "nl": "Polling interval voor de apparaatstatus",
            "en": "Polling interval for device state"
          }
        },
        {
          "id": "navigationMode",
          "type": "radio",
          "value": "2",
          "label": {
            "en": "Navigation Mode"
          },
          "values": [
            {
              "id": "1",
              "label": {
                "en": "Normal"
              }
            },
            {
              "id": "2",
              "label": {
                "en": "Extra care"
              }
            }
          ]
        },
        {
          "id": "noGoLines",
          "type": "checkbox",
          "value": true,
          "label": {
            "en": "Enable no-go lines"
          }
        },
        {
          "id": "ecoMode",
          "type": "checkbox",
          "value": true,
          "label": {
            "en": "Enable ECO mode"
          }
        }
      ]
    }
  ]
}